<resources>
    <!-- Base application theme. -->
    <style name="Theme.KiwiTalk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_deep</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/brown_deep</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- custom color-->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceDark">@color/grey1</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceLight">@color/grey5</item>
        <item name="colorOnSurfaceVariant">@color/green_text</item>

    </style>

    <style name="Theme.Keyword" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeColor">@color/grey1</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/color_chip_background_keyword</item>
        <item name="android:textColor">@color/color_chip_text_keyword</item>
    </style>

    <style name="Theme.KiwiTalk.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>